{
  "extends": [
    "tslint:recommended",
    "tslint-config-prettier",
    "tslint-config-airbnb",
    "tslint-react"
  ],
  "rules": {
    "max-line-length": {
      "severity": "warning",
      "options": [120]
    },
    "no-console": {
        "severity": "warning",
        "options": ["debug", "info", "log", "time", "timeEnd", "trace"]
    },
    "interface-name": false,
    "no-boolean-literal-compare": false,
    "variable-name": [ "allow-pascal-case" ]
  }
}
